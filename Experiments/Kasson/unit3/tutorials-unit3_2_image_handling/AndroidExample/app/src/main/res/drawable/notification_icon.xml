<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bell Top -->
    <item>
        <shape android:shape="oval">
            <size
                android:width="16dp"
                android:height="16dp" />
            <solid android:color="#FF000000" /> <!-- Change this to your desired color -->
            <padding
                android:left="4dp"
                android:right="4dp"
                android:top="0dp"
                android:bottom="0dp"/>
        </shape>
    </item>

    <!-- Bell Body -->
    <item android:top="8dp">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" /> <!-- Rounded corners for bell body -->
            <solid android:color="#FF000000" /> <!-- Change this to your desired color -->
            <size
                android:width="20dp"
                android:height="12dp" />
        </shape>
    </item>

    <!-- Bell Bottom -->
    <item android:top="20dp">
        <shape android:shape="oval">
            <size
                android:width="20dp"
                android:height="8dp" />
            <solid android:color="#FF000000" /> <!-- Change this to your desired color -->
        </shape>
    </item>

</layer-list>
